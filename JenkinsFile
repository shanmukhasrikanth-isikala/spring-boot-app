pipeline {
  agent any // Use any available agent

  stages {
   stage('Checkout') {
      steps {
        deleteDir() // Clean workspace before fetching the latest code
        git branch: 'main', url: 'https://github.com/shanmukhasrikanth-isikala/spring-boot-app.git'
      }
    }
  stage('Build and Test') {
      steps {
        // build the project and create a JAR file
        bat 'mvn clean package'
      }
    }
  stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://localhost:9001"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          bat 'mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
  }
}
